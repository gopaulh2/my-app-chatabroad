<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_plus_signin_btn_text_dark_disabled"
    android:onClick="relativeOnClick"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="140dp"
        android:ems="10"
        android:textColor="#750202"
        android:hint="@string/username"
        android:inputType="textPersonName"
        android:typeface="serif" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usernameEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:textColor="#750202"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:typeface="serif" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/UK"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:onClick="checkButton"
            android:text="UK" />

        <RadioButton
            android:id="@+id/France"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:onClick="checkButton"
            android:text="France" />

        <RadioButton
            android:id="@+id/Germany"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:onClick="checkButton"
            android:text="Germany" />


    </RadioGroup>

    <Button
        android:id="@+id/loginSignupButton"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@color/wallet_hint_foreground_holo_dark"
        android:onClick="signupLogin"
        android:text="@string/sign_up"
        android:textColor="#750202"
        android:typeface="serif" />

    <TextView
        android:id="@+id/toggleLoginModeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginSignupButton"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:onClick="toggleLoginMode"
        android:text="@string/or_login"
        android:textColorLink="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
        android:typeface="serif" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="242dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@mipmap/cooltext" />

    <TextView
        android:id="@+id/countryTextView"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordEditText"
        android:layout_alignLeft="@id/radioGroup"
        android:layout_centerInParent="true"
        android:layout_marginLeft="-70dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:onClick="toggleLoginMode"
        android:text="Country:"
        android:textColorLink="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
        android:typeface="serif" />
</RelativeLayout>
